package chapter4;
/**
 * 打印1997年7月的日历
 * @author sunguangyu
 *
 */
public class MyCalender {
	public static void main(String[] args) {
		System.out.println("星期一\t星期二\t星期三\t星期四\t星期五\t星期六\t星期天\t");
		System.out.print("\t");
		//System.out.print("1\t2\t3\t4\t5\t6\n");
		
		int dayOfMonth = 31;
		for (int i = 1; i <= dayOfMonth; i++) {
			System.out.print(i);
			
			
			if((i + 1) % 7 == 0){
				System.out.print("\n");
			}else{
				System.out.print("\t");
			}
		
		}

	}

}
